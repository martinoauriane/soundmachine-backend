model Track {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  created_at  DateTime @default(now())
  updated_at  DateTime? @updatedAt
  duration    Int    // seconds
  music_genre String
  filepath    String

  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

model User {
  id      Int      @id @default(autoincrement())
  firstname String
  lastname String 
  pseudo String
  email   String   @unique
  password String

  // Relations avec Track
  uploadedTracks   Track[]? @relation("UserUploadedTracks")
  downloadedTracks Track[]? @relation("UserDownloadedTracks")
  favoriteTracks Track[]? @relation("UserFavoriteTracks")
  // Self-relation followers/following
  followers  User[]? @relation("UserFollows")
  following  User[]? @relation("UserFollows")
}
